<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/normal_white"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/id_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="2月23日 17:04" />

    <TextView
        android:id="@+id/id_heart_rate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/id_heart_rate_unit"
        android:fontFamily="serif-monospace"
        android:text="79"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_heart_rate_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:text="次/分" />

    <ImageView
        android:id="@+id/id_heart_rate_detail"
        android:rotation="180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_left_pressed" />

</RelativeLayout>