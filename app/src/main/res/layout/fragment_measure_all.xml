<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.jiefly.multiparametermonitor.measuring.MeasureEcg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <com.example.jiefly.multiparametermonitor.measuring.view.EcgView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_tm"
                android:layout_width="wrap_content"
                android:text="体温（℃）"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_tm_value"
                android:text="36.5"
                android:textSize="40sp"
                android:layout_centerInParent="true"
                android:textColor="@color/half_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@color/divider_color"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_ox"
                android:layout_width="wrap_content"
                android:text="血氧（mmHg）"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_ox_value"
                android:text="98%"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="40sp"
                android:textColor="@color/half_black"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@color/divider_color"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="1dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_ht"
                android:layout_width="wrap_content"
                android:text="心率（bpm）"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_ht_value"
                android:text="72"
                android:textSize="40sp"
                android:layout_centerInParent="true"
                android:textColor="@color/half_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@color/divider_color"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_blood"
                android:layout_width="wrap_content"
                android:text="血压（mmHg）"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_blood_value"
                android:text="125/83"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:textColor="@color/half_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
